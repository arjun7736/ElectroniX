
<%- include('../layout/header') %>
<!-- navbar -->
<nav class="bg-gray-800">
  <div class="flex items-center justify-between flex-grow md:pl-12 py-5">
    <form action="/products" method="get" class="w-full max-w-xl relative flex">
      <input
        type="text"
        name="search"
        id="search"
        class="w-full border border-primary border-r-0 pl-12 py-3 pr-3 rounded-l-md focus:outline-none hidden md:flex"
        placeholder="search"
      />
      <button
        class="bg-red-500 border border-primary text-white px-6 md:px-10 py-2 rounded-r-md hover:bg-transparent hover:text-primary transition hidden md:flex"
      >
        Search
      </button>
    </form>
    <div class="flex items-center space-x-4 mr-4 md:mr-10">
      <button id="responsiveNavBtn" class="md:hidden">
        <svg
          class="h-6 w-6 text-gray-200 cursor-pointer"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"
          ></path>
        </svg>
      </button>

      <div id="responsiveNav" class="hidden md:flex items-center space-x-4">
        <a href="/" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Home</div>
        </a>
        <a href="/products" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Shop</div>
        </a>
        <a href="/wishlist" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Wishlist</div>
        </a>
        <a href="/cart" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Cart</div>
        </a>
        <a href="/account" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Account</div>
        </a>

        <% if(locals.user){ %>
        <a href="/logout" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Logout</div>
        </a>
        <%} else{ %>
        <a href="/login" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Login</div>
        </a>
        <a href="/register" class="text-gray-700 hover:text-primary transition relative">
          <div class="text-gray-200 leading-3">Register</div>
        </a>
        <%} %>
      </div>
    </div>
  </div>
</nav>

<script>
  const responsiveNavBtn = document.getElementById("responsiveNavBtn");
  const responsiveNav = document.getElementById("responsiveNav");

  responsiveNavBtn.addEventListener("click", () => {
    responsiveNav.classList.toggle("hidden");
  });
</script>

<%- include('../layout/footer') %>

