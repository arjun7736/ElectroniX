<%- include('../componants/footer') %>

<script>
  document.querySelectorAll(".toggleButton").forEach((button) => {
    button.addEventListener("click", function () {
      const productId = this.id.split("_")[1];
      const confirmationMessage =
        this.innerText === "Delete"
          ? "Are you sure you want to delete this product?"
          : "Are you sure you want to undo delete this product?";
      Swal.fire({
        title: "Confirmation",
        text: confirmationMessage,
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#4CAF50",
        cancelButtonColor: "#D9534F",
        confirmButtonText: "Yes",
        cancelButtonText: "Cancel",
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/admin/deleteproduct/${productId}`, {
            method: "post",
          })
            .then(response=>{
              if(response.ok){
               const button =  document.getElementById(`toggleButton_${productId}`)
                if (button.innerText === "Undo Delete") {
                  button.innerText = "Delete";
                  button.style.backgroundColor = "red";
              } else {
                button.innerText = "Undo Delete";
                button.style.backgroundColor = "green";
              }

                
              }
            })

              
            
            .catch((error) => {
              console.error("Error deleting product:", error);
            });
        }
      });
    });
  });
</script>
