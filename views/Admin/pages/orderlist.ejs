  <div class="flex flex-col flex-1 w-full">
    <%- include('../componants/navbar') %>
    <main class="h-full overflow-y-auto">
      <div class="container px-6 mx-auto grid" id="dataContainer">
        <h2
          class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
        >
        Ordres
        </h2>
        <div class="w-full overflow-x-auto">
          <table class="w-full whitespace-no-wrap">
            <thead>
              <tr
                class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
              >
                <th class="px-4 py-3">User</th>
                <th class="px-4 py-3">Product</th>
                <th class="px-4 py-3">Quantity</th>
                <th class="px-4 py-3">TotalPrice</th>
                <th class="px-4 py-3">Payment Status</th>
                <th class="px-4 py-3">Type Of Payment</th>
                <th class="px-4 py-3">Order Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800" >
              <% OrderData.forEach((value) => { %>
            <tr class="text-gray-700 dark:text-gray-400">
                <td class="px-4 py-3">
                 <a href="/admin/orderDetails/<%=value._id%>"> <div class="flex items-center text-sm">
                    <div>
                      <p class="font-semibold"><%= value.user.username %></p>
                      <p class="text-xs text-gray-600 dark:text-gray-400">
                        <%= value.user.mobile %>
                      </p>
                    </div>
                  </div></a>
                </td>

                <td class="px-4 py-3 text-xs">
                <%value.products.forEach((value)=>{ %> 
                <div class="ml-3">
                  <p class="font-semibold"><%= value.product.brandname %></p>
                </div>
                <% })%>
               </div>
                </td>

                <td class="px-4 py-3 text-xs">
                  <div
                  class="relative hidden w-8 h-8 mr-3 rounded-full md:block"
                >
                 
                </div>
                <%value.products.forEach((value)=>{ %> 
                <div class="ml-5">
                  <p id="<%= value.quantity %>" class="font-semibold"><%= value.quantity %></p>  
                </div>
                <% })%>
               </div>
                </td>

                <td class="px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div class="ml-5">
                      <p class="font-semibold"><%= value.grandTotal %></p>
                    </div>
                  </div>
                </td>
                
                <td class="px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div
                      class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                    </div>
                    <div>
                      <p class="font-semibold"><%= value.paymentStatus %></p>
                    </div>
                  </div>
                </td>

                <td class="px-4 py-3">
                  <div class="flex items-center text-sm" id="<%= value._id %>">
                    <div
                      class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                    </div>
                    <div>
                      <p class="font-semibold"><%= value.paymentMethod %></p>
                    </div>
                  </div>
                </td>

                <td class="px-4 py-3">
                  <div class="flex items-center text-sm" id="statusContainer_<%= value._id %>">
                    <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block"></div>
                    <div class="status-dropdown-container" id="statusDropdownContainer_<%= value._id %>">
                      <% if (value.status === 'Delivered') { %>
                        <p class="font-semibold text-green-500">Delivered</p>
                        <%}else if(value.status === 'Return'){%>
                          <p class="font-semibold text-red-500">Return</p>
                      <% } else { %>
                        <select class="status-dropdown text-black" data-order-id="<%= value._id %>" id="statusDropdown_<%= value._id %>">
                          <option value="Pending" <%= value.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                          <option value="Processing" <%= value.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                          <option value="Shipped" <%= value.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                          <option value="Delivered" <%= value.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                        </select>
                      <% } %>
                    </div>
                  </div>
               </td>
               
               </tr>
              <% }); %>
            </tbody>
          </table>
