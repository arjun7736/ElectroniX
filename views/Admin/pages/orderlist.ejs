<%- include('../componants/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', () => {

  const statusDropdowns = document.querySelectorAll('.status-dropdown');

  const updateOrderStatus = async (orderId, newStatus) => {
     try {
        const response = await fetch(`/admin/orderlist/updateStatus/${orderId}`, {
           method: 'POST',
           headers: {
              'Content-Type': 'application/json',
           },
           body: JSON.stringify({ newStatus }),
        });
        const updatedOrder = await response.json();
        const statusDropdownContainer = document.getElementById(`statusDropdownContainer_${orderId}`);

        console.log('Order status updated:', updatedOrder);
        const statusContainer = document.getElementById(`statusContainer_${orderId}`);
        if(updatedOrder.status =='Delivered'){
           statusContainer.innerHTML = `<p class="font-semibold text-green-500">${newStatus}</p>`;
        }
         if(updatedOrder.status =='Return'){
          statusDropdownContainer.innerHTML = `<p class="font-semibold text-green-500">Delivered</p>`;

        }
       
     } catch (error) {
        console.error('Error updating order status:', error);
     }
  };

  statusDropdowns.forEach((dropdown) => {
     dropdown.addEventListener('change', (event) => {
      const orderId = event.target.dataset.orderId; 
         const newStatus = event.target.value;
        updateOrderStatus(orderId, newStatus);
     });
  });
});

</script>
