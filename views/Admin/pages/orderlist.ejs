      <div class="pagination mt-4">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/orderlist?page=<%= i %>" class="px-3 py-1 mx-1 rounded-md <%= currentPage == i ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700' %>">
                <%= i %>
            </a>
        <% } %>
