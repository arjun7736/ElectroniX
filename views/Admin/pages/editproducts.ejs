<div class="flex flex-col flex-1 w-full">
    <%- include('../componants/navbar') %> 
    <main class="h-full overflow-y-auto">
        <div class="container px-6 mx-auto grid" id="dataContainer">        
          
      
          <h1 class="text-2xl font-semibold mb-4 text-white">Edit Product</h1>

          <!-- Image Upload Section -->
          <div class="flex mb-4">
            <div class="w-1/3">
              <div class="flex justify-center w-full mx-auto sm:max-w-lg">
                <div class="flex flex-col items-center justify-center w-full h-auto my-20 bg-white sm:w-3/4 sm:rounded-lg sm:shadow-xl">
                  <div class="mt-10 mb-10 text-center">
                    <h2 class="text-2xl  font-semibold mb-2">Upload Pictures</h2>
                  </div>
                  <form action="/admin/editproducts/<%= produtDetail._id %>" method="post" enctype="multipart/form-data"  class="relative w-4/5 h-32 max-w-xs mb-10 bg-gray-100 rounded-lg shadow-inner">
                    <input type="file" id="image" name="images" multiple class="hidden"  >
                    <label for="image" class="z-20 flex flex-col-reverse items-center justify-center w-full h-full cursor-pointer">
                      <p class="z-10 text-xs font-light text-center text-gray-500">Click here to Upload</p>
                      <svg class="z-10 w-8 h-8 text-indigo-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
                      </svg>
                    </label>

                    <div class="w-full">
                      <div id="image-preview-container" class="flex flex-col items-center justify-center w-full h-auto my-20  sm:w-3/4 sm:rounded-lg">
                        <% produtDetail.images.forEach((image)=>{ %>                      
                          <div id="image-preview" class="w-full h-32 relative object-cover mt-5  rounded-lg">
                            <img src="data:image/jpg;base64, <%= image.data.toString('base64') %>" alt="" srcset="">
                            <div class="delete-overlay absolute top-0 left-0 right-0 bottom-[-20px] flex items-center justify-center opacity-0 transition duration-300 ease-in-out hover:opacity-100">
                              <button type="button" onclick="deleteImage('<%= image._id %>' ,'<%= produtDetail._id %>')" class="bg-red-500 text-white p-2 rounded-md hover:bg-red-700 cursor-pointer">Delete</button>
                            </div>
                          </div>
                          
                        <%})%>
                      </div>
                    </div>
                </div>
              </div>
            </div>
        
            <!-- Dropdowns on the Same Line -->
            <div class="w-1/2 ml-2">
              <!-- Dropdown 1 -->
              <div class="  mb-4">
                <label for="brandname" class="block text-sm font-medium text-white">Brand</label>
                
                <select id="brandname" name="brandname" class="mt-1 p-2 rounded-md w-full">
                    <% brand.forEach(brand => { %>
                      <option value="<%= brand.brandname %>" <% if (produtDetail.brandname === brand.brandname) { %>selected<% } %>>
                        <%= brand.brandname %>                      
                      <% }); %>
              </select>

              </div>
        
              <!-- Dropdown 2 -->
              <div class="mb-4">
                <label for="category" class="block text-sm font-medium text-white">Category</label>
              <select id="category" name="category" class="mt-1 p-2 rounded-md w-full">
                <% category.forEach(category => { %>
                  <option value="<%= category.categoryname %>" <% if (produtDetail.categoryname === category.categoryname) { %>selected<% } %>>
                    <%= category.categoryname %>                      
                  <% }); %>
            </select>
              </div>
        
              <div class="mb-4">
                <label for="subcategory" class="block text-sm font-medium text-white">Sub Category</label>
              <select id="subcategory" name="subcategory" class="mt-1 p-2 rounded-md w-full">
                <% subcategory.forEach(category => { %>
                  <option value="<%= category.subcategoryname %>" <% if (produtDetail.subcategoryname === category.subcategoryname) { %>selected<% } %>>
                    <%= category.subcategoryname %>                   
                 <% }); %>
            </select>
              </div>
        



              <div class="mb-6">
                <label for="varientname" class="block text-sm font-medium text-white">Varient Name</label>
