                <% }); %>
              </select>
              </div>
        
              <div class="mb-4">
                <label for="subcategory" class="block text-sm font-medium text-white">Sub Category</label>
              <select id="subcategory" name="subcategory" class="mt-1 p-2 rounded-md w-full">
                <% subcategory.forEach(category => { %>
                    <option value="<%= category.subcategoryname %>"><%= category.subcategoryname %></option>
                <% }); %>
             </select>
              </div>
        



              <div class="mb-6">
