                <label for="brandname" class="block text-sm font-medium text-white">Brand</label>
                <select id="brandname" name="brandname" class="mt-1 p-2 rounded-md w-full">
                  <% brand.forEach(brand => { %>
                      <option value="<%= brand.brandname %>"><%= brand.brandname %></option>
                  <% }); %>
